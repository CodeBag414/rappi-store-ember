<div class="restaurant-menu-container {{if (eq viewMode 'list') 'list' 'grid'}}" id="restaurant-menu-container">
    <div class="title-block">
        <h1>MENÃš</h1>
        <hr>
        <div {{action 'switchVideMode' 'list'}} class="list-view  {{if (eq viewMode 'list') 'active' ''}}"></div>
        <div {{action 'switchVideMode' 'grid'}} class="grid-view {{if (eq viewMode 'grid') 'active' ''}}"></div>
    </div>
  {{#if categorizedView}}
      <div class="menu-list {{if (eq viewMode 'list') 'list' 'grid'}}">
        {{#if (eq viewMode 'list')}}
          {{#each allProducts as |productsArray|}}
              <div class="col-md-12 grid-view-menu" style="float: none">
                  <span class="menu-category">{{productsArray.name}}</span>
              </div>
            {{#each productsArray.products as |product key|}}
              {{recommend-product-card product=product pIndex=key corridorName=corridorName corridorId=corridorId rappi_store_id=product.store_id inSpecificRestaurant=inSpecificRestaurant}}
            {{/each}}
          {{/each}}
        {{else}}
          {{#each allProducts as |eachCategory key|}}
              <div class="col-md-12 grid-view-menu">
                  <span class="menu-category">{{eachCategory.name}}</span>
              </div>
            {{#each eachCategory.products as |product|}}
              {{dish-product-card product=product corridorName=corridorName corridorId=corridorId rappi_store_id=product.store_id inSpecificRestaurant=inSpecificRestaurant}}
            {{/each}}
          {{/each}}
        {{/if}}
      </div>
  {{else}}
      <div class="menu-list {{if (eq viewMode 'list') 'list' 'grid'}}">
        {{#each products as |product key|}}
          {{#if (eq viewMode 'list')}}
            {{recommend-product-card product=product pIndex=key corridorName=corridorName corridorId=corridorId rappi_store_id=product.store_id inSpecificRestaurant=inSpecificRestaurant}}
          {{else}}
            {{dish-product-card product=product corridorName=corridorName corridorId=corridorId rappi_store_id=product.store_id inSpecificRestaurant=inSpecificRestaurant}}
          {{/if}}
        {{/each}}
      </div>
  {{/if}}
    <div class="scroll-progress-bar">
        <div class="progress-line"></div>
        <div class="background-line"></div>
    </div>
</div>
{{#if bebidasProducts}}
    <div class="most-popular-dish-container">
        <div class="title-block">
            <h1>Bebidas</h1>
            <hr>
        </div>
        <div id="drinks-carousel" class="most-popular-dishes">
          {{#each bebidasProducts as |bebidas key|}}
              {{restaurant-product-card product=bebidas corridorName=corridorName corridorId=corridorId rappi_store_id=storeId inSpecificRestaurant=inSpecificRestaurant}}
          {{/each}}
        </div>
    </div>
{{/if}}
