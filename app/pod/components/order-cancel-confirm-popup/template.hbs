<div class="popUp-wrapper loginPopup ember-modal-overlay translucent   ember-view"
     style="position: absolute;z-index: 10000000;height: 246px;width: 521px;top: 100px;">
    <div class="popUp-Outer ">
        <div class="toTable">
            <div class=" text-center confirmPopup">
                <div class="formTitle border-bottom padding-popup">
                    <h1>¿Estás seguro que desea cancelar la orden?</h1>
                </div>
            <p class="btnBox btn-greenMargin padding-popup">
              {{#if confirmCancelRequestProcess}}
                  <div class="hvr-pulse-shrink btn btn-green">por favor espera...</div>
              {{else}}
                  <button type="submit" class="btn btn-primary" {{action 'closePopup'}}>NO, CONTINUAR</button>
                  <button type="submit" class="btn btn-green" {{action 'confirmCancelRequest'}}>SI, SEGURO</button>
              {{/if}}
                </p>
            </div>
            <div class="formTitle border-bottom padding-popup">
                <h1>{{errMessage}}</h1>
            </div>
        </div>
    </div>
</div>